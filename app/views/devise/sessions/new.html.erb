
<div class="row col-4 mx-auto mt-2">
  <h2 class="text-center">Online Banking</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "control-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
    </div>

    <div class="form-group row">
      <%= f.submit "Log in", class: "btn btn-primary col-md-4 mx-auto mt-3" %>
    </div>
  <% end %>
</div>
